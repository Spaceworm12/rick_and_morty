<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>
    <style name="SecondButtonStyle" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">90dp</item>
    <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyBackgroundGradientStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:keepScreenOn">true</item>
    </style>
    <style name="Elements">
    <item name="android:paddingStart">10dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingEnd">10dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginEnd">10dp</item>
    <item name="android:layout_marginStart">10dp</item>
    </style>
    <style name="DatePickerDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="main_button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>


</resources>