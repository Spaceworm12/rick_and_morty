<resources>
    <style name="Theme.RickAndMorty" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#4923BD</item>
        <item name="colorPrimaryVariant">#7855E4</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">#7436A1</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">#543DBC</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="SecondTheme" parent="Theme.RickAndMorty">
        <item name="colorPrimary">#facc00</item>
        <item name="colorPrimaryVariant">#facc00</item>
        <item name="colorOnPrimary">#facc00</item>
        <item name="colorSecondary">#facc00</item>
        <item name="colorSecondaryVariant">#facc00</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#facc00</item>
        <item name="android:windowBackground">#facc00</item>
        <item name="android:textColorPrimary">#BC3636</item>
        <item name="toolbarStyle">@style/MyToolbarSecond</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="MyToolbarSecond" parent="MyToolbar">
        <item name="android:background">@color/teal_200</item>
    </style>
</resources>
